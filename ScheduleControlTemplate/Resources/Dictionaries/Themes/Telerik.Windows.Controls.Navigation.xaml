                <Border x:Name="HeaderBackground"
                        Grid.ColumnSpan="3"
                        Background="{TemplateBinding HeaderBackground}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Visibility="{TemplateBinding BackgroundVisibility}"/>
                <telerikPrimitives:LayoutTransformControl x:Name="AdditionalContentTransform" Grid.Column="2" VerticalAlignment="Center" Margin="10 0 0 0">
                    <ContentPresenter x:Name="AdditionalContentElement" Content="{TemplateBinding AdditionalContent}"/>
                </telerikPrimitives:LayoutTransformControl>
                <telerikPrimitives:LayoutTransformControl x:Name="AdditionalLeftContentTransform" VerticalAlignment="Center">
                    <ContentPresenter x:Name="AdditionalLeftContentElement" Content="{TemplateBinding AdditionalLeftContent}"/>
                </telerikPrimitives:LayoutTransformControl>
                <panels:RadTabbedWindowPanel Grid.Column="1" HorizontalAlignment="Left" x:Name="PART_TabbedWindowPanel" Margin="2 0">
                    <ScrollViewer x:Name="ScrollViewerElement"
                            Style="{StaticResource EmptyScrollViewerStyle}"
                            VerticalScrollBarVisibility="Disabled"
                            BorderThickness="0"
                            IsTabStop="False"
                            HorizontalScrollBarVisibility="{Binding (ScrollViewer.HorizontalScrollBarVisibility), RelativeSource={RelativeSource TemplatedParent}}">
                        <ItemsPresenter/>
                    </ScrollViewer>
                    <telerik:RadButton x:Name="PART_AddItemsButton" Margin="-1 0 0 0" Visibility="{TemplateBinding AddButtonVisibility}" Style="{TemplateBinding AddButtonStyle}">
                        <telerik:RadGlyph x:Name="PlusGlyph" Glyph="{StaticResource GlyphPlus}" FontSize="16"/>
                    </telerik:RadButton>
                    <RepeatButton x:Name="LeftScrollButtonElement" Margin="20 0 0 0" AutomationProperties.Name="scroll left" Style="{StaticResource TabbedWindowScrollButtonStyle}">
                        <telerik:RadGlyph Glyph="{StaticResource GlyphArrowChevronLeft}" FontSize="16"/>
                    </RepeatButton>
                    <RepeatButton x:Name="RightScrollButtonElement"
                            Margin="0 0 20 0"
                            AutomationProperties.Name="scroll right"
                            telerik:RadDockPanel.Dock="Right"
                            Style="{StaticResource TabbedWindowScrollButtonStyle}">
                        <telerik:RadGlyph Glyph="{StaticResource GlyphArrowChevronRight}" FontSize="16"/>
                    </RepeatButton>
                </panels:RadTabbedWindowPanel>
                <Canvas x:Name="DropIndicatorPanel" Grid.Column="1" HorizontalAlignment="Left" Visibility="Collapsed">
                    <Border x:Name="DropIndicator"
                            VerticalAlignment="Center"
                            Background="{telerik1:FluentResource ResourceKey=AccentPressedBrush}"
                            BorderBrush="{telerik1:FluentResource ResourceKey=AccentPressedBrush}"
                            Opacity="0.2"
                            IsHitTestVisible="False"/>
                </Canvas>
            </Grid>
            <Border x:Name="ContentBorder"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    Grid.Row="1"
                    BorderThickness="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Mode=TwoWay}"
                    Background="{TemplateBinding Background}"
                    Padding="{TemplateBinding Padding}">
                <Grid>
                    <ContentPresenter x:Name="ContentElement"
                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsContentPreserved,Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                            ContentTemplate="{TemplateBinding SelectedContentTemplate}"
                            ContentTemplateSelector="{TemplateBinding SelectedContentTemplateSelector}"/>
                    <Grid x:Name="ContentElementsPanel" Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsContentPreserved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="TabStripPlacement" Value="Top">
                <Setter TargetName="ContentBorder" Property="BorderThickness" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={StaticResource ThicknessToOrientedThicknessConverter}, ConverterParameter=LeftRightBottom}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="TabbedWindowTabControlStyle" TargetType="tabbedWindow:TabbedWindowTabControl" BasedOn="{StaticResource RadTabControlStyle}">
        <Setter Property="CloseTabsOnMouseMiddleButtonDown" Value="True"/>
        <Setter Property="Template" Value="{StaticResource TabbedWindowTabControlTemplate}"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="AddButtonStyle" Value="{StaticResource AddItemsButtonStyle}"/>
        <Setter Property="BorderBrush" Value="{telerik1:FluentResource ResourceKey=BasicBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="ItemContainerStyle" Value="{DynamicResource RadTabbedWindowTabItemStyle}"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <telerikNavigationPrimitives:RadBrowserPanel ItemMinWidth="{Binding ItemMinWidth, FallbackValue=80, RelativeSource={RelativeSource AncestorType={x:Type tabbedWindow:TabbedWindowTabControl}}}" ItemWidth="{Binding ItemWidth, FallbackValue=120, RelativeSource={RelativeSource AncestorType={x:Type tabbedWindow:TabbedWindowTabControl}}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="tabbedWindow:TabbedWindowTabControl" BasedOn="{StaticResource TabbedWindowTabControlStyle}"/>
    <Style x:Key="TabbedWindowHeaderButtonStyle" TargetType="telerik:RadButton" BasedOn="{StaticResource WindowButtonStyle}">
        <Setter Property="Foreground" Value="{telerik1:FluentResource ResourceKey=IconBrush}"/>
        <Setter Property="MinWidth" Value="35"/>
        <Setter Property="MinHeight" Value="35"/>
    </Style>
    <ControlTemplate x:Key="RadTabbedWindowTemplate" TargetType="telerikNavigation:RadTabbedWindow">
        <Grid x:Name="LayoutRoot">
            <mat:Shadow
                    Background="{TemplateBinding BorderBrush}"
                    Opacity="0.2"
                    ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}"
                    CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}"/>
            <Border x:Name="WindowOuterBorder"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}">
                <AdornerDecorator>
                    <Grid x:Name="Header" Background="{TemplateBinding BorderBackground}" Margin="{TemplateBinding Padding}">
                        <tabbedWindow:TabbedWindowTabControl x:Name="PART_TabControl"
                                ItemsSource="{TemplateBinding ItemsSource}"
                                ItemTemplate="{TemplateBinding ItemTemplate}"
                                ItemTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                ItemContainerStyle="{TemplateBinding ItemContainerStyle}"
                                ItemContainerStyleSelector="{TemplateBinding ItemContainerStyleSelector}"
                                ItemsPanel="{TemplateBinding ItemsPanel}"
                                ItemWidth="{TemplateBinding ItemWidth}"
                                ItemMinWidth="{TemplateBinding ItemMinWidth}"
                                DisplayMemberPath="{TemplateBinding DisplayMemberPath}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                AddButtonVisibility="{TemplateBinding AddButtonVisibility}"
                                AddButtonStyle="{TemplateBinding AddButtonStyle}"
                                ScrollMode="{TemplateBinding ScrollMode}"
                                SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                SelectedIndex="{Binding SelectedIndex, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                SelectedItemRemoveBehaviour="{TemplateBinding SelectedItemRemoveBehaviour}"
                                IsContentPreserved="{TemplateBinding IsContentPreserved}">
                            <tabbedWindow:TabbedWindowTabControl.AdditionalLeftContent>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter x:Name="IconContent"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Margin="10 2 0 0"
                                            Content="{TemplateBinding Icon}"
                                            ContentTemplate="{TemplateBinding IconTemplate}"/>
                                    <ContentPresenter x:Name="HeaderContent"
                                            Margin="10 2 10 0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            SnapsToDevicePixels="True"
                                            TextBlock.Foreground="{TemplateBinding Foreground}"
                                            TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                            TextBlock.FontSize="{TemplateBinding FontSize}"
                                            Content="{TemplateBinding Header}"
                                            ContentTemplate="{TemplateBinding HeaderTemplate}"
                                            ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"/>
                                </Grid>
                            </tabbedWindow:TabbedWindowTabControl.AdditionalLeftContent>
                            <tabbedWindow:TabbedWindowTabControl.AdditionalContent>
                                <Border x:Name="PART_HeaderButtonsBorder" VerticalAlignment="Top">
                                    <StackPanel x:Name="HeaderButtons" Orientation="Horizontal">
                                        <telerik:RadButton x:Name="PART_MinimizeButton"
                                                Command="{x:Static telerik:WindowCommands.Minimize}"
                                                Style="{StaticResource TabbedWindowHeaderButtonStyle}"
                                                Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip telerik:LocalizationManager.ResourceKey="Minimize"/>
                                            </ToolTipService.ToolTip>
                                            <telerik:RadGlyph Glyph="{StaticResource GlyphMinimize}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </telerik:RadButton>
                                        <telerik:RadButton x:Name="PART_RestoreButton"
                                                Command="{x:Static telerik:WindowCommands.Restore}"
                                                Style="{StaticResource TabbedWindowHeaderButtonStyle}"
                                                Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip telerik:LocalizationManager.ResourceKey="Restore"/>
                                            </ToolTipService.ToolTip>
                                            <telerik:RadGlyph Glyph="{StaticResource GlyphWindowCollapse}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </telerik:RadButton>
                                        <telerik:RadButton x:Name="PART_MaximizeButton"
                                                Command="{x:Static telerik:WindowCommands.Maximize}"
                                                Style="{StaticResource TabbedWindowHeaderButtonStyle}"
                                                Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip telerik:LocalizationManager.ResourceKey="Maximize"/>
                                            </ToolTipService.ToolTip>
                                            <telerik:RadGlyph Glyph="{StaticResource GlyphWindow}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </telerik:RadButton>
                                        <telerik:RadButton x:Name="PART_CloseButton"
                                                Command="{x:Static telerik:WindowCommands.Close}"
                                                Style="{StaticResource TabbedWindowHeaderButtonStyle}"
                                                Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip telerik:LocalizationManager.ResourceKey="Close"/>
                                            </ToolTipService.ToolTip>
                                            <telerik:RadGlyph Glyph="{StaticResource GlyphClose}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </telerik:RadButton>
                                    </StackPanel>
                                </Border>
                            </tabbedWindow:TabbedWindowTabControl.AdditionalContent>
                        </tabbedWindow:TabbedWindowTabControl>
                    </Grid>
                </AdornerDecorator>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="WindowState" Value="Maximized">
                <Setter TargetName="WindowOuterBorder" Property="BorderThickness" Value="0"/>
                <Setter TargetName="LayoutRoot" Property="Margin" Value="0"/>
                <Setter TargetName="Header" Property="Margin" Value="0"/>
            </Trigger>
            <Trigger Property="WindowState" Value="Minimized">
                <Setter TargetName="LayoutRoot" Property="HorizontalAlignment" Value="Left"/>
                <Setter TargetName="LayoutRoot" Property="VerticalAlignment" Value="Top"/>
                <Setter TargetName="LayoutRoot" Property="Margin" Value="0"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Content" SourceName="HeaderContent" Value="{x:Null}"/>
                    <Condition Property="ContentTemplate" SourceName="HeaderContent" Value="{x:Null}"/>
                    <Condition Property="ContentTemplateSelector" SourceName="HeaderContent" Value="{x:Null}"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="HeaderContent" Property="Visibility" Value="Collapsed"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Content" SourceName="IconContent" Value="{x:Null}"/>
                    <Condition Property="ContentTemplate" SourceName="IconContent" Value="{x:Null}"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="IconContent" Property="Visibility" Value="Collapsed"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsActiveWindow" Value="True"/>
                    <Condition Property="mat:ThemeEffectsHelper.IsAcrylic" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" TargetName="WindowOuterBorder" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderBackground}"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="RadTabbedWindowStyle" TargetType="telerikNavigation:RadTabbedWindow" BasedOn="{StaticResource RadWindowStyle}">
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="mat:MaterialAssist.CornerRadius" Value="0"/>
        <Setter Property="Template" Value="{StaticResource RadTabbedWindowTemplate}"/>
        <Setter Property="AddButtonStyle" Value="{StaticResource AddItemsButtonStyle}"/>
        <Setter Property="Foreground" Value="{telerik1:FluentResource ResourceKey=MarkerBrush}"/>
        <Setter Property="FontFamily" Value="{telerik1:FluentResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik1:FluentResource ResourceKey=FontSize}"/>
        <Setter Property="Header" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="1 0 1 1"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource RadTabbedWindowTabItemStyle}"/>
        <Setter Property="MinHeight" Value="39"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <telerikNavigationPrimitives:RadBrowserPanel ItemMinWidth="{Binding ItemMinWidth, FallbackValue=80, RelativeSource={RelativeSource AncestorType={x:Type telerikNavigation:RadTabbedWindow}}}" ItemWidth="{Binding ItemWidth, FallbackValue=120, RelativeSource={RelativeSource AncestorType={x:Type telerikNavigation:RadTabbedWindow}}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="navigation:RadWindowInteropHelper.ShowInTaskbar" Value="True"/>
    </Style>
    <Style TargetType="telerikNavigation:RadTabbedWindow" BasedOn="{StaticResource RadTabbedWindowStyle}"/>
    <ControlTemplate x:Key="RadSplashScreenTemplate" TargetType="telerikNavigation:RadSplashScreen">
        <Grid x:Name="LayoutRootGrid">
            <mat:Shadow x:Name="Shadow"
                    Background="{TemplateBinding Background}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding helpers:ThemeHelper.CornerRadius}"
                    ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}"/>
            <Border x:Name="BackgroundVisual"
                    Grid.RowSpan="4"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding helpers:ThemeHelper.CornerRadius}"/>
            <Grid x:Name="ContentGrid" Margin="{TemplateBinding Padding}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image
                        Stretch="{TemplateBinding ImageStretch}"
                        Width="{TemplateBinding ImageWidth}"
                        Height="{TemplateBinding ImageHeight}"
                        Source="{Binding Path=ImagePath, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={x:Null}}"
                        Visibility="{Binding Path=ImagePath, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource NullToVisibilityConverter}}"/>
                <ContentPresenter
                        Grid.Row="1"
                        ContentSource="Content"
                        Margin="0 20 0 0"
                        TextBlock.Foreground="{TemplateBinding Foreground}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                <telerik1:RadProgressBar
                        Grid.Row="2"
                        Value="{TemplateBinding ProgressValue}"
                        Visibility="{TemplateBinding ProgressBarVisibility}"
                        IsIndeterminate="{TemplateBinding IsIndeterminate}"
                        Minimum="{TemplateBinding MinValue}"
                        Maximum="{TemplateBinding MaxValue}"
                        x:Name="LoadingProgressBar"
                        Margin="0 20"
                        MaxWidth="260"/>
                <ContentPresenter
                        Grid.Row="3"
                        ContentSource="Footer"
                        Margin="0 20 0 0"
                        TextBlock.Foreground="{TemplateBinding Foreground}"
                        HorizontalAlignment="{TemplateBinding HorizontalFooterAlignment}"/>
            </Grid>
        </Grid>
    </ControlTemplate>
    <Style x:Key="RadSplashScreenStyle" TargetType="telerikNavigation:RadSplashScreen">
        <Setter Property="helpers:ThemeHelper.CornerRadius" Value="{telerik1:FluentResource ResourceKey=CornerRadius}"/>
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="FontFamily" Value="{telerik1:FluentResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik1:FluentResource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:FluentResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="{telerik:FluentResource ResourceKey=AlternativeBrush}"/>
        <Setter Property="BorderBrush" Value="{telerik:FluentResource ResourceKey=BasicBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20 20 20 10"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template" Value="{StaticResource RadSplashScreenTemplate}"/>
    </Style>
    <Style TargetType="telerikNavigation:RadSplashScreen" BasedOn="{StaticResource RadSplashScreenStyle}"/>
</ResourceDictionary>
