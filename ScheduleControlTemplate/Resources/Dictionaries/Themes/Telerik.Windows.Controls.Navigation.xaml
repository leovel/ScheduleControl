                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="IconPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{telerik:FluentResource ResourceKey=MarkerInvertedBrush}"/>
